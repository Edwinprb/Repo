#12

import numpy as np

# Creamos matrices de 3x3
matriz1 = np.array([[9, -1, 7], [5, 4, -6], [3, 5, 3]])
matriz2 = np.array([[2, 1, -2], [-1, 8, 5], [-3, 1, -9]])

# Multiplicaci贸n de las dos matrices
multiplicacion = matriz1 @ matriz2 # para este caso usaremos matriz1 @ matriz2

print("Resultado de la multiplicacion:")
print(multiplicacion)













